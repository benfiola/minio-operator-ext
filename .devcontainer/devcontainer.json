{
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "ethan-reesor.exp-vscode-go",
        "golang.go",
        "rohit-gohri.format-code-action",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "editor.codeActionsOnSave": [
          "source.organizeImports",
          "source.formatDocument"
        ],
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "exp-vscode-go.testExplorer.enable": true,
        "go.testExplorer.enable": false,
        "go.testFlags": ["-v", "-count=1"],
        "go.testTimeout": "300s",
        "launch": {
          "version": "0.2.0",
          "configurations": [
            {
              "name": "${workspaceFolder}/dev/dev.go",
              "type": "go",
              "request": "launch",
              "mode": "auto",
              "program": "${workspaceFolder}/dev/dev.go"
            }
          ]
        },
        "[go]": {
          "editor.defaultFormatter": "golang.go"
        }
      }
    }
  },
  "features": {
    // "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/go": {
      "version": "1.22.5"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": ["curl", "git", "iproute2", "sudo", "vim"]
    }
  },
  "image": "ubuntu:latest",
  "postCreateCommand": ".devcontainer/post-create.sh",
  "remoteEnv": {
    "MC_DISABLE_PAGER": "1",
    "MC_INSECURE": "1",
    "KUBECONFIG": "/workspaces/minio-operator-ext/.dev/kube-config.yaml",
    "PATH": "/workspaces/minio-operator-ext/.dev:${containerEnv:PATH}"
  }
}
